<HydrationUI>:
    Label:
        id: error_label
        text: ''  
        color: (1, 0.3, 0.3, 1)  
        opacity: 0  

    BoxLayout:
        orientation: 'vertical'
        padding: 30 
        spacing: 20

        Image:
            source: 'water-drop.png'  
            size_hint_y: None 
            height: 200
            allow_stretch: True 
            keep_ratio: True    

        BoxLayout:
            orientation: 'horizontal' 
            Label:
                text: 'Current Temperature:'
                font_name: 'BebasNeue-Regular'  
            Label:
                id: temperature_label
                text: '[temperature]'
                font_name: 'BebasNeue-Regular'

        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Water Intake Recommendation:'
                font_name: 'BebasNeue-Regular'
            Label:
                id: intake_label
                text: '[amount]'
                font_name: 'BebasNeue-Regular'
        

        Button:
            text: 'Update'
            size_hint_y: None
            height: 50  
            font_name: 'BebasNeue-Regular'
            on_press: root.update_hydration_info()
